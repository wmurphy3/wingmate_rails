<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th colspan="2">
        <span>
          <%= link_to "<i class='fa fa-plus' aria-hidden='true'></i> Create".html_safe, new_category_path, class: 'btn btn-sm btn-success' %>
        </span>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |cat| %>
      <tr>
        <td><%= cat.id %></td>
        <td><%= cat.name %></td>
        <td>
          <span>
            <%= link_to "<i class='fa fa-pencil' aria-hidden='true'></i> Edit".html_safe, edit_category_path(cat), class: 'btn btn-sm btn-primary' %>
          </span>
          <span>
            <%= link_to "<i class='fa fa-trash' aria-hidden='true'></i> Delete".html_safe, category_path(cat), method: :delete, class: 'btn btn-sm btn-outline-danger', data: {confirm: "Are you sure?"} %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="apple_pagination mx-auto">
  <%= paginate @categories, :container => false %>
</div>
