<%= form_for(@achievement)do |f| %>
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :points %>
          <%= f.text_field :points, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :category_id %>
          <%= f.collection_select :category_id, Category.all, :id, :name, {include_blank: true}, {class: 'form-control'} %>
        </div>
      </div>
      <%= f.submit "Create", class: "btn btn-primary ml-3" %>
    </div>
  </div>
<% end %>
